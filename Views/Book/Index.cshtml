@model IEnumerable<BTVN_B5_2.Models.Book>
@*@model BTVN_B5_2.Models.Book*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p><strong>Tác giả: </strong>@item.Author</p>
                    <p><strong>Thể loại: </strong>@item.Category.CategoryName</p>
                    <img style="align-self:center;" alt="@item.Title"
                         src="~/Content/ImageBooks/@item.Image" width="125" height="150" />
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        @Html.ActionLink("Xem", "Details", "Book", new { id = item.Id }, new
                        {
                            @class
                        = "btn btn-default"
                        })
                        @Html.ActionLink("Thêm vào giỏ hàng", "AddToCard", "Book", new { id = item.Id }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

